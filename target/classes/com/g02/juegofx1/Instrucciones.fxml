<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="BorderPane" styleClass="container2" stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.g02.juegofx1.InstruccionesController" >
    <top>
        <HBox alignment="TOP_RIGHT" styleClass="element-container">
            <Label fx:id="Label_interfaz2" styleClass="title" text="Instrucciones"/>
        </HBox>
    </top>
    <center>
        <VBox>
            <Text styleClass="text-instruction" text="- Haz clic en el botón 'Comenzar' en el menú de inicio para comenzar el juego.&#10;"/>
            <Text styleClass="text-instruction" text="- En la interfaz de registro, ingresa tu nombre en el campo de texto y haz clic en el botón &#10;'Estoy listo' para comenzar el juego.&#10;"/>
            <Text styleClass="text-instruction" text="- Se te mostrará una pregunta y varias opciones de respuesta. Elige la respuesta correcta &#10;haciendo clic en el botón correspondiente.&#10;"/>
            <Text styleClass="text-instruction" text="- Acumularás puntos por cada respuesta correcta. La puntuación se mostrará en la esquina superior &#10;derecha junto con tu nombre.&#10;"/>
            <Text styleClass="text-instruction" text="- El juego continuará hasta que respondas todas las preguntas.&#10;"/>
            <Text styleClass="text-instruction" text="- Al final del juego, se mostrará la cantidad de puntos que obtuviste junto con tu nombre." />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_LEFT" styleClass="element-container">
            <Button fx:id="Button_Click2" onAction="#onButtonClick" styleClass="custom-button-instruction" />
        </HBox>
    </bottom>
</BorderPane>
